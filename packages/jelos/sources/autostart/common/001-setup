. /etc/profile

if [ ! -L "/storage/.emulationstation" ]
then
  ln -sf /storage/.config/emulationstation /storage/.emulationstation
fi

if [ -d "/storage/cache/.cores" ]
then
  rm -rf /storage/cache/.cores
fi

if [ ! -d "/tmp/cache" ]
then
  mkdir /tmp/cache
fi

ln -sf /tmp/cache /storage/cache/.cores

